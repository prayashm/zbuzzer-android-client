<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.zairza.zbuzzer.BuzzerActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/background_dark">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/status_msg"
            android:id="@+id/statusmsg"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:background="@android:color/holo_green_dark"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:elegantTextHeight="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/gamename"
            android:id="@+id/gamename"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:padding="50dp"
            android:textStyle="bold"
            android:singleLine="false"
            android:textSize="30sp"
            android:background="@android:color/transparent"
            android:elegantTextHeight="false"
            android:textColor="@android:color/background_light"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/username"
            android:id="@+id/username"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:padding="10dp"
            android:singleLine="true"
            android:textSize="20sp"
            android:background="@android:color/holo_blue_dark"
            android:clickable="false" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/buzzerbtn"
            android:id="@+id/buzzer"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/holo_orange_dark"
            android:elegantTextHeight="true"
            android:gravity="center_vertical|center_horizontal"
            android:padding="20dp"
            android:textStyle="bold"
            android:textSize="50sp"
            android:shadowColor="@android:color/holo_orange_light"
            android:onClick="sendBuzz"/>
    </LinearLayout>

</RelativeLayout>
